<odoo>
    <record id="view_move_form_inherit_livestock_category" model="ir.ui.view">
        <field name="name">account.move.form.livestock.category</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='price_subtotal']" position="before">
                <field name="livestock_category_id" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
